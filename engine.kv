WindowManager:

    LandingScreen:
    MainScreen:
    TableScreen:

<LandingScreen>:
    name: "landing"

    canvas.before:
        Color: 
            rgba: (1, 1, 1, 1)

        Rectangle:
            source: 'background.png'
            size: root.width, root.height
            pos: self.pos

    BoxLayout:
        cols: 3
        orientation: "horizontal"
        size: root.width, root.height

        GridLayout:
            cols: 1
            Button:
                text: "Table screen"
                on_release: 
                    app.root.current = "table"
                    root.manager.transition.direction = "right"
        GridLayout:
            cols: 1
            Image:
                source: 'logo.png'
                allow_stretch: True
            Label:
                text: "Welcome to the Economics Engine!"
                text_size: self.size
                halign: 'center'
                valign: 'middle'
            
            Label:
                text: "On the left, you can access more complicated problems, such as Present Worth Analysis."
                text_size: self.size
                halign: 'center'
                valign: 'middle'

            Label:
                text: "Fall 2021 Engineering Economics Honors Contract"
                text_size: self.size
                halign: 'center'
                valign: 'middle'

            Label:
                text: "Author: M. Hurst"
                text_size: self.size
                halign: 'center'
                valign: 'middle'

        GridLayout:
            cols: 1
            Button:
                text: "Main Screen"
                on_release: 
                    app.root.current = "main"
                    root.manager.transition.direction = "left"

        



<MainScreen>:
    name: "main"

    BoxLayout:
        cols: 3
        size: root.width, root.height


        GridLayout:
            cols: 1
            spacing: .5


            Spinner:
                id: selection_id
                text: "Problem Type Selection"
                values: ["Present Value, P, from F", "Future Value, F, from P", "Payment Value, A, from P", "Present Value, P, from A", "Payment Value, A, from F", "Future Value, F, from A" ,"Number of Periods", "Find Compound Interest"]
                on_text: root.spinner_click(selection_id.text)
                size_hint_y: 0.1

            TextInput:
                id: mutable1
                hint_text: "Select a problem type to get started"
                size_hint_y: 0.1
                background_color: [0.9, 0.9, 0.9, 1]

            TextInput:
                id: mutable2
                hint_text: ""
                size_hint_y: 0.1
                background_color: [0.9, 0.9, 0.9, 1]

            TextInput:
                id: mutable3
                hint_text: ""
                size_hint_y: 0.1
                background_color: [0.9, 0.9, 0.9, 1]

            TextInput:
                id: mutable4
                hint_text: ""
                size_hint_y: 0
                background_color: [0.9, 0.9, 0.9, 1]


            Button:
                id: goButton
                text: "Go!"
                background_color: 0, 1, 0, 1
                on_press: root.press()

            Button:
                text: "Back to landing"
                size_hint_y: 0.1
                on_release: 
                    app.root.current = "landing"
                    root.manager.transition.direction = "right"

        GridLayout:
            cols: 1
            Image:
                source: 'logo.png'
            Label:
                id: center_label
                text: "Welcome to the Economics Engine!"
            Label:
                id: selection_disp
                text: "Please select your problem category \non the left to continue. "





