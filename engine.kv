WindowManager:

    LandingScreen:
    MainScreen:
    TableScreen:

<LandingScreen>:
    name: "landing"

    canvas.before:
        Color: 
            rgba: (1, 1, 1, 1)

        Rectangle:
            source: 'background.png'
            size: root.width, root.height
            pos: self.pos

    BoxLayout:
        cols: 3
        orientation: "horizontal"
        size: root.width, root.height

        GridLayout:
            cols: 1
            Button:
                text: "Analysis Screen"
                on_release: 
                    app.root.current = "table"
                    root.manager.transition.direction = "right"
        GridLayout:
            cols: 1
            Image:
                source: 'logo.png'
                allow_stretch: True
            Label:
                text: "Welcome to the Economics Engine!"
                text_size: self.size
                halign: 'center'
                valign: 'middle'
            
            Label:
                text: "On the left, you can access more complicated problems, such as Present Worth Analysis."
                text_size: self.size
                halign: 'center'
                valign: 'middle'

            Label:
                text: "Fall 2021 Engineering Economics Honors Contract"
                text_size: self.size
                halign: 'center'
                valign: 'middle'

            Label:
                text: "Author: M. Hurst"
                text_size: self.size
                halign: 'center'
                valign: 'middle'

        GridLayout:
            cols: 1
            Button:
                text: "Main Screen"
                on_release: 
                    app.root.current = "main"
                    root.manager.transition.direction = "left"

        



<MainScreen>:
    name: "main"

    canvas.before:
        Color: 
            rgba: (1, 1, 1, 1)

        Rectangle:
            source: 'background.png'
            size: root.width, root.height
            pos: self.pos

    BoxLayout:
        cols: 3
        size: root.width, root.height


        GridLayout:
            cols: 1
            spacing: .5

            Label:
                text: ""
                size_hint_y: 0.2

            Spinner:
                id: selection_id
                text: "Problem Type Selection"
                values: ["Present Value, P, from F", "Future Value, F, from P", "Payment Value, A, from P", "Present Value, P, from A", "Payment Value, A, from F", "Future Value, F, from A" ,"Number of Periods", "Find Compound Interest"]
                on_text: root.spinner_click(selection_id.text)
                size_hint_y: 0.3

            TextInput:
                id: mutable1
                hint_text: "Select a problem type to get started"
                size_hint_y: 0.3
                background_color: [0.9, 0.9, 0.9, 1]

            TextInput:
                id: mutable2
                hint_text: ""
                size_hint_y: 0.3
                background_color: [0.9, 0.9, 0.9, 1]

            TextInput:
                id: mutable3
                hint_text: ""
                size_hint_y: 0.3
                background_color: [0.9, 0.9, 0.9, 1]

            TextInput:
                id: mutable4
                hint_text: ""
                size_hint_y: 0
                background_color: [0.9, 0.9, 0.9, 1]

            Label:
                text: ""


            GridLayout:
                cols: 2

                Button:
                    id: main_reset
                    text: "Reset"
                    on_press: root.main_reset()

                Button:
                    id: goButton
                    text: "Go!"
                    background_color: 0, 1, 0, 1
                    on_press: root.press()

            Label:
                text: ""
                size_hint_y: 0.2

            Button:
                text: "Back to landing"
                size_hint_y: 0.3
                on_release: 
                    app.root.current = "landing"
                    root.manager.transition.direction = "right"

        GridLayout:
            cols: 1
            Image:
                source: 'logo.png'
            Label:
                id: center_label
                text: "Welcome to the Economics Engine!"
            Label:
                id: selection_disp
                text: "Please select your problem category \non the left to continue. "





<TableScreen>:
    name: "table"

    canvas.before:
        Color: 
            rgba: (1, 1, 1, 1)

        Rectangle:
            source: 'background.png'
            size: root.width, root.height
            pos: self.pos

    BoxLayout:
        cols: 2
        orientation: "horizontal"
        size: root.width, root.height

        GridLayout:
            id: main_table
            cols: 3

            Label:
                
                text: "You have selected:"

            Label:
                text: ""
                id: table_selection_disp 

            Label:
                text: ""



            Label:
                text: "Value Type"
            
            Label:
                text: "Numerical Value"

            Label:
                text: "Life-Cycle Length"

            Label:
                id: mutableType1
                text: ""
            TextInput:
                id: mutableInput1
            Label:
                text: ""

            Label:
                id: mutableType2
            TextInput:
                id: mutableInput2
            Label:
                text: ""

            Label:
                id: mutableType3
            TextInput:
                id: mutableInput3
            TextInput:
                id: input3year
                hint_text: "n"

            Label:
                text: ""
            TextInput:
                id: iRate
                hint_text: "rate in %"


            Label:
                text: ""
            Label:
                text: ""
            Label:
                text: ""

            Label: 
                text: ""
            Label:
                text: ""
            Label:
                text: ""
            
            GridLayout:
                cols: 2

                Button:
                    id: table_reset
                    text: "Reset"
                    on_release: root.reset()

                Button:
                    id: table_submit
                    text: "Go!"
                    background_color: 0, 1, 0, 1
                    on_release: root.tableGo()


        GridLayout:
            cols: 1
            width: 250
            size_hint_x: None
            
            Label:
                text: "Analysis Screen"
                size_hint_y: 0.1

            Spinner:
                id: table_selection_id
                text: "Problem Type Selection"
                values: ["Present Worth Analysis", "Future Worth Analysis", "Annual Worth Analysis"]
                size_hint_y: 0.2
                on_text: root.table_spinner_click(table_selection_id.text)

            Label:
                text: "User guide: Please make an analysis type selection above. Use postive values for cash inflows, and negative values for cash outflows."
                size_hint_y: 0.5
                text_size: self.size
                halign: 'center'
                valign: 'middle'

            Label:
                text: ""
                id: answer_spot
                text_size: self.size
                halign: 'center'
                valign: 'middle'

            Button:
                text: "Back to landing"
                size_hint_y: 0.1
                on_release: 
                    app.root.current = "landing"
                    root.manager.transition.direction = "left"


