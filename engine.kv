            TextInput:
                id: A10
            Spinner:
                id: A10type
                text: "..."
                values: ["F", "P"]

            Label:
                text: "Annual Expense 1"
            TextInput:
                id: ae1
            Label:
                text: ""
            
            
            Label:
                text: "Annual Expense 2"
            TextInput:
                id: ae2
            Label:
                text: ""


            Label:
                text: "Annual Expense 3"
            TextInput:
                id: ae3
            Label:
                text: ""


            Label:
                text: ""
            TextInput:
                id: iRate
                hint_text: "rate in %"
            
            GridLayout:
                cols: 2

                Button:
                    id: table_reset
                    text: "Reset"
                    on_release: root.reset()

                Button:
                    id: table_submit
                    text: "Go!"
                    background_color: 0, 1, 0, 1
                    on_release: root.tableGo()


        GridLayout:
            cols: 1
            width: 250
            size_hint_x: None
            
            Label:
                text: "Table Screen"
                size_hint_y: 0.1

            Spinner:
                id: table_selection_id
                text: "Problem Type Selection"
                values: ["Present Worth Analysis", "Future Worth Analysis", "Annual Worth Analysis"]
                size_hint_y: 0.2
                on_text: root.table_spinner_click(table_selection_id.text)

            Label:
                text: "User guide: Please make an analysis type selection above. This table supports up to 11 data entries. Use postive values for cash inflows, and negative values for cash outflows. The last entry made in the table is assumed to be the final year of the project life cycle."
                size_hint_y: 0.5
                text_size: self.size
                halign: 'center'
                valign: 'middle'

            Label:
                text: ""
                id: answer_spot
                text_size: self.size
                halign: 'center'
                valign: 'middle'

            Button:
                text: "Back to landing"
                size_hint_y: 0.1
                on_release: 
                    app.root.current = "landing"
                    root.manager.transition.direction = "left"


