                values: ["F", "P"]

            Label:
                text: "5"
            TextInput:
                id: A5
            Spinner:
                id: A5type
                text: "..."
                values: ["F", "P"]

            Label:
                text: "6"
            TextInput:
                id: A6
            Spinner:
                id: A6type
                text: "..."
                values: ["F", "P"]

            Label:
                text: "7"
            TextInput:
                id: A7
            Spinner:
                id: A7type
                text: "..."
